#PROD configs for pz-compute

. $HOME/.bashrc

echo 'PRODUCTION - setting environment'

cd $SCRATCH

# raise NPROC
ulimit -u 65536 2> /dev/null

if [[ -d ~app.photoz ]]
then
    source ~app.photoz/conf-pz-compute-user.sh
fi

export ENVIRONMENT="prod"

echo 'add test setup where you are going to run pz-compute: ln -s ~app.photoz/pz-compute/scheduler_examples_slurm/test_setup.py'